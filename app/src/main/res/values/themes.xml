<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarciNoFit." parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbarTextAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Heading1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="fontFamily">@font/rubik_bold</item>
    </style>

    <style name="Caption1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/medium_primary</item>
    </style>

    <style name="Headline1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:letterSpacing">0.009</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/high_primary</item>
    </style>

    <style name="Subtitle2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">0.006</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/medium_primary</item>
    </style>

    <style name="Body1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/high_primary</item>
    </style>

    <style name="Subtitle1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing">0.009</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/high_primary</item>
    </style>


    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_state_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="fontFamily">@font/rubik_bold</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="backgroundTint">@color/background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="fontFamily">@font/rubik_bold</item>
    </style>


    <style name="ButtonText2" parent="Headline1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="ButtonText1" parent="Headline1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/medium_primary</item>
    </style>


</resources>