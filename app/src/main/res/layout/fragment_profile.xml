<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProfileFragment">

   <Toolbar
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:fitsSystemWindows="true"
       android:title="@string/me"
       android:titleTextAppearance="@style/toolbarTextAppearance"
       android:id="@+id/toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/profile"
            android:id="@+id/profileTv"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:drawablePadding="15dp"
            app:drawableStartCompat="@drawable/ic_edit_profile_icon" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/reminder"
            android:textColor="@color/black"
            android:id="@+id/reminderTv"
            android:textSize="18sp"
            android:drawablePadding="15dp"
            app:drawableStartCompat="@drawable/ic_reminder_icon" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/rest_set"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/restSetTv"
            android:drawablePadding="15dp"
            app:drawableStartCompat="@drawable/ic_baseline_coffee_24"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/weekly_goal"
            android:textColor="@color/black"
            android:id="@+id/goalTv"
            android:textSize="18sp"
            android:drawablePadding="15dp"
            app:drawableStartCompat="@drawable/ic_baseline_check_24" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/sync_to_google_fit"
                android:textColor="@color/black"
                android:layout_toStartOf="@id/syncSwitch"
                android:textSize="18sp"
                android:id="@+id/googleFitTv"
                android:drawablePadding="15dp"
                app:drawableStartCompat="@drawable/ic_google_fit" />
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:layout_centerVertical="true"
                android:id="@+id/syncSwitch"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray"
                android:layout_below="@id/googleFitTv"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/reset_progress"
            android:textColor="@color/black"
            android:id="@+id/resetTv"
            android:textSize="18sp"
            android:drawablePadding="15dp"
            app:drawableStartCompat="@drawable/ic_baseline_restart_alt_24" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            />
    </LinearLayout>

</RelativeLayout>