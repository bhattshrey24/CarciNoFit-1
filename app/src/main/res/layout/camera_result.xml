<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/resultDummyImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/result_dummy_image2"/>
    <androidx.cardview.widget.CardView
        android:layout_margin="30dp"
        android:id="@+id/resultPieChartCardView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/resultDummyImage">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/resultPieChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/calorieHeading"
            android:layout_marginBottom="5dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/recyclerCardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultPieChartCardView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myResultRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="10dp"
            tools:listitem="@layout/result_recycler_item" />

    </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/disabled_primary"
            android:text="List of Toxic Substances"
            android:textSize="20sp"
            android:textStyle="bold" />


</androidx.constraintlayout.widget.ConstraintLayout>